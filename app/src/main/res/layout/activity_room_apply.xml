<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fskj.gaj.system.RoomApplyActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBar"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <RelativeLayout
            android:paddingRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">
            <ImageView
                android:id="@+id/img_back"
                android:src="@mipmap/top_menu_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#fff"
                android:text="会议室申请"
                android:textSize="20dp"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_commit"
                android:textSize="16dp"
                android:textColor="#fff"
                android:text="提交"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:paddingTop="30dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--会议室名-->
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <TextView
                    android:gravity="right"
                    android:text="会议室名:"
                    android:textColor="#333"
                    android:textSize="16dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_room_name"
                    android:text="1604"
                    android:textSize="16dp"
                    android:textColor="#333"
                    android:layout_marginLeft="10dp"
                    android:singleLine="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <!--开会日期-->
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <TextView
                    android:gravity="right"
                    android:text="开会日期:"
                    android:textColor="#333"
                    android:textSize="16dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_meeting_date"
                    android:text="2017-08-31"
                    android:textSize="16dp"
                    android:textColor="#333"
                    android:layout_marginLeft="10dp"
                    android:singleLine="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <!--开会时间-->
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <TextView
                    android:gravity="right"
                    android:text="开会时间:"
                    android:textColor="#333"
                    android:textSize="16dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_meeting_time"
                    android:text="14:00-18:00"
                    android:textSize="16dp"
                    android:textColor="#333"
                    android:layout_marginLeft="10dp"
                    android:singleLine="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <!--会议名称-->
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <TextView
                    android:gravity="right"
                    android:text="会议名称:"
                    android:textColor="#333"
                    android:textSize="16dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" />
                <EditText
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="10dp"
                    android:id="@+id/et_meeting_name"
                    android:background="@drawable/shape_edit_text"
                    android:textSize="16dp"
                    android:textColor="#999"
                    android:gravity="center_vertical"
                    android:hint="请输入会议名称"
                    android:textColorHint="#999"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <!--申请人姓名-->
            <LinearLayout
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <TextView
                    android:gravity="right"
                    android:text="申请人姓名:"
                    android:textColor="#333"
                    android:textSize="16dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" />
                <EditText
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="10dp"
                    android:id="@+id/et_user_name"
                    android:background="@drawable/shape_edit_text"
                    android:textSize="16dp"
                    android:textColor="#999"
                    android:gravity="center_vertical"
                    android:hint="请输入姓名"
                    android:textColorHint="#999"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <!--申请人电话-->
            <LinearLayout
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <TextView
                    android:gravity="right"
                    android:text="申请人电话:"
                    android:textColor="#333"
                    android:textSize="16dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" />
                <EditText
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="10dp"
                    android:id="@+id/et_user_phone"
                    android:background="@drawable/shape_edit_text"
                    android:textSize="16dp"
                    android:textColor="#999"
                    android:gravity="center_vertical"
                    android:hint="请输入电话号码"
                    android:textColorHint="#999"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <!--参会人员-->
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="150dp">
                <TextView
                    android:layout_gravity="start"
                    android:gravity="right|center_vertical"
                    android:text="参会人员:"
                    android:textColor="#333"
                    android:textSize="16dp"
                    android:layout_width="100dp"
                    android:layout_height="44dp" />
                <EditText
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:gravity="start"
                    android:id="@+id/et_user_member"
                    android:background="@drawable/shape_edit_text"
                    android:textSize="16dp"
                    android:textColor="#999"
                    android:hint="请输入参会人员名单"
                    android:textColorHint="#999"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
